<h1>All Nodes</h1>
<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th colspan="1">MAC Address</th>
			<th colspan="1">IP Address</th>
			<th colspan="1">Switch</th>
			<th colspan="1">Authorized</th>
		</tr>
	</thead>
	<tbody>
		<% for node in @nodes %>
			<tr>	
				<td><%= node.mac_address %></td>
				<td><%= node.ip_address %></td>
				<td><%= node.name %></td>
				<td><%= node.authorization %></td>
			</tr>
		<% end %>
	</tbody>
</table>

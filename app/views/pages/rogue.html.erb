<h1>Rogue Devices</h1>

<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th colspan="1">MAC Address</th>
			<th colspan="1">IP Address</th>
			<th colspan="1">Switch</th>
			<th colspan="1">Authorized</th>
			<th colspan="1">Action</th>
		</tr>
	</thead>
	<tbody>
		<% for rogue in @rogues %>
			<tr>	
				<td><%= rogue.mac_address %></td>
				<td><%= rogue.ip_address %></td>
				<td><%= rogue.name %></td>
				<td><%= rogue.authorization %></td>
				<td><%= button_to "Approve",	{:controller => :nodes,
												     :action => 'approve',
												         :id => rogue.id
												},
												class: "btn btn-small"
					%></td>
			</tr>
		<% end %>
	</tbody>
</table>

<h1>Network Nodes</h1>
<div class="row">
	<div class="span12">
		<%= link_to "Add Device",	new_device_path, class: "btn pull-right" %>
	</div>
</div><br>
<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th colspan="1">Name</th>
			<th colspan="1">IP Address</th>
			<th colspan="1">Type</th>
			<th colspan="1">Community</th>
			<th colspan="1">Action</th>
		</tr>
	</thead>
	<tbody>
		<% for device in @devices %>
			<tr>	
				<td><%= device.name %></td>
				<td><%= device.ip_address %></td>
				<td><%= device.device_type %></td>
				<td><%= device.community %></td>
				<td><%= link_to 'Edit', edit_device_path(device), class: "btn btn-mini"  %><%= link_to 'Delete', device, method: :delete, data: {confirm: "You sure?"}, class: "btn btn-mini" %></td>
			</tr>
		<% end %>
	</tbody>
</table>
